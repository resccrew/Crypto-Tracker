<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="using:Desktop_Crypto_Portfolio_Tracker.Models"
        x:Class="Desktop_Crypto_Portfolio_Tracker.Views.AddTransactionWindow"
        Title="Add Transaction"
        Width="400" Height="480"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ExtendClientAreaToDecorationsHint="True"
        TransparencyLevelHint="AcrylicBlur"
        Background="#1E1E1E">

    <Border Padding="20">
        <StackPanel Spacing="15">
            <TextBlock Text="Add New Asset" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Select Coin" Foreground="#AAAAAA"/>
            <ComboBox Name="CoinComboBox" 
                      HorizontalAlignment="Stretch" 
                      Background="#252526" 
                      Foreground="White"
                      PlaceholderText="Choose a coin..."
                      SelectionChanged="Coin_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="models:Coin">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="{Binding Symbol}" FontWeight="Bold" Width="40"/>
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Buy Price ($)" Foreground="#AAAAAA"/>
            <TextBox Name="PriceBox" Watermark="0.00" Background="#252526" Foreground="White"/>

            <TextBlock Text="Amount" Foreground="#AAAAAA"/>
            <TextBox Name="AmountBox" Watermark="0.00" Background="#252526" Foreground="White"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,30,0,0">
                <Button Content="Cancel" Click="Cancel_Click" Width="100" HorizontalContentAlignment="Center" Background="#333333" Foreground="White"/>
                <Button Content="Add Asset" Click="Add_Click" Width="100" HorizontalContentAlignment="Center" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>