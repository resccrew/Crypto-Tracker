<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Desktop_Crypto_Portfolio_Tracker.ViewModels"
             xmlns:models="using:Desktop_Crypto_Portfolio_Tracker.Models"
             xmlns:asyncImageLoader="using:AsyncImageLoader"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Desktop_Crypto_Portfolio_Tracker.Views.ComparisonView"
             x:DataType="vm:MainWindowViewModel">

    <UserControl.Styles>
        <Style Selector="ComboBox">
            <Setter Property="Height" Value="46"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Background" Value="#1C1C1E"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="ComboBoxItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1C1C1E"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto, Auto, *" Margin="40">
        
        <StackPanel Grid.Row="0" Margin="0,0,0,40" HorizontalAlignment="Center">
            <TextBlock Text="MARKET CAP CALCULATOR" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       LetterSpacing="2"/>
            <TextBlock Text="Simulate asset growth potential" 
                       FontSize="13" 
                       Foreground="#666666" 
                       HorizontalAlignment="Center" 
                       Margin="0,8,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Background="#111111" 
                BorderBrush="#333333" 
                BorderThickness="1" 
                CornerRadius="0" 
                Padding="30"
                MaxWidth="800"
                HorizontalAlignment="Stretch">
            
            <Border.BoxShadow>0 0 30 0 #05000000</Border.BoxShadow>

            <Grid ColumnDefinitions="*, 60, *">
                
                <StackPanel Grid.Column="0" Spacing="10">
                    <TextBlock Text="SOURCE COIN" FontSize="11" FontWeight="Bold" Foreground="#666666" LetterSpacing="1"/>
                    <ComboBox ItemsSource="{Binding MarketCoins}" 
                              SelectedItem="{Binding SelectedCoinA}"
                              PlaceholderText="Select Coin...">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="models:Coin">
                                <Grid ColumnDefinitions="Auto, Auto, *">
                                    <Image Grid.Column="0" Width="20" Height="20" Margin="0,0,10,0" VerticalAlignment="Center" asyncImageLoader:ImageLoader.Source="{Binding ImageUrl}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Symbol}" FontWeight="Bold" Foreground="White" Width="50" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Price, StringFormat=$\{0:N2\}}" Foreground="#888" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <Border Grid.Column="1" VerticalAlignment="Bottom" Height="46" Padding="0,5">
                     <TextBlock Text="â†’" FontSize="24" Foreground="#444" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="2" Spacing="10">
                    <TextBlock Text="TARGET MARKET CAP" FontSize="11" FontWeight="Bold" Foreground="#666666" LetterSpacing="1"/>
                    <ComboBox ItemsSource="{Binding MarketCoins}" 
                              SelectedItem="{Binding SelectedCoinB}"
                              PlaceholderText="Select Target Coin...">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="models:Coin">
                                <Grid ColumnDefinitions="Auto, Auto, *">
                                    <Image Grid.Column="0" Width="20" Height="20" Margin="0,0,10,0" VerticalAlignment="Center" asyncImageLoader:ImageLoader.Source="{Binding ImageUrl}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Symbol}" FontWeight="Bold" Foreground="White" Width="50" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding MarketCap, StringFormat=$\{0:N0\}}" Foreground="#888" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11"/>
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Spacing="15" 
                    IsVisible="{Binding SelectedCoinA, Converter={x:Static ObjectConverters.IsNotNull}}">
            
            <TextBlock Text="HYPOTHETICAL PRICE" 
                       FontSize="11" 
                       FontWeight="Bold" 
                       Foreground="#555555" 
                       HorizontalAlignment="Center" 
                       LetterSpacing="2"/>
            
            <TextBlock Text="{Binding HypotheticalPrice, StringFormat=$\{0:N2\}}" 
                       FontSize="64" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       LetterSpacing="-2"/>
            
            <Border Background="#222" BorderBrush="#333" BorderThickness="1" CornerRadius="0" Padding="15,8" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="POTENTIAL ROI:" Foreground="#888" FontSize="12" FontWeight="SemiBold"/>
                    
                    <TextBlock Text="{Binding PriceMultiplier, StringFormat=\{0:N2\}x}" 
                               Foreground="{Binding PriceMultiplier, Converter={x:Static vm:PriceColorConverter.Instance}}" 
                               FontWeight="Bold"
                               FontSize="12"/>
                </StackPanel>
            </Border>

            <Grid ColumnDefinitions="Auto, 40, Auto" HorizontalAlignment="Center" Margin="0,40,0,0">
                <StackPanel>
                    <TextBlock Text="{Binding SelectedCoinA.Name}" FontWeight="Bold" Foreground="White" HorizontalAlignment="Right" FontSize="16"/>
                    <TextBlock Text="{Binding SelectedCoinA.MarketCap, StringFormat='MCap: ${0:N0}'}" Foreground="#666" HorizontalAlignment="Right" FontSize="12"/>
                </StackPanel>
                
                <Border Grid.Column="1" Width="1" Background="#333" HorizontalAlignment="Center" Margin="0,5"/>
                
                <StackPanel Grid.Column="2">
                    <TextBlock Text="{Binding SelectedCoinB.Name}" FontWeight="Bold" Foreground="White" FontSize="16"/>
                    <TextBlock Text="{Binding SelectedCoinB.MarketCap, StringFormat='MCap: ${0:N0}'}" Foreground="#666" FontSize="12"/>
                </StackPanel>
            </Grid>
        </StackPanel>

    </Grid>
</UserControl>