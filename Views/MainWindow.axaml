<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Desktop_Crypto_Portfolio_Tracker.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="Desktop_Crypto_Portfolio_Tracker.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Crypto Tracker"
        TransparencyLevelHint="AcrylicBlur"
        Background="#1E1E1E"
        Foreground="White">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <TabControl Margin="10">
        
        <TabItem Header="Market Prices" FontSize="16" FontWeight="Bold">
            <Grid RowDefinitions="Auto, *">
                <TextBlock Text="Top Market Coins" FontSize="20" Margin="10,20,0,10" Foreground="#CCCCCC"/>
                
                <DataGrid Grid.Row="1" ItemsSource="{Binding MarketCoins}" 
                          AutoGenerateColumns="False" IsReadOnly="True" 
                          Background="#252526" RowBackground="Transparent" GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding Rank}" Width="50"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="80" FontWeight="Bold"/>
                        <DataGridTextColumn Header="Price (USD)" Binding="{Binding Price, StringFormat='${0:N2}'}" Width="150"/>
                        <DataGridTextColumn Header="24h %" Binding="{Binding Change24h, StringFormat='{}{0}%'}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>

        <TabItem Header="My Portfolio" FontSize="16" FontWeight="Bold">
            <Grid RowDefinitions="Auto, *">
                
                <Border Grid.Row="0" Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,10,0,20">
                    <Grid ColumnDefinitions="*, Auto">
                        <StackPanel>
                            <TextBlock Text="Total Balance" Foreground="#AAAAAA"/>
                            <TextBlock Text="$ 62,500.00" FontSize="36" FontWeight="Bold" Foreground="#4CAF50"/>
                        </StackPanel>
                        <Button Grid.Column="1" Content="+ Add Transaction" 
                                Background="#007ACC" Foreground="White" 
                                FontSize="14" Padding="20,10" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <DataGrid Grid.Row="1" ItemsSource="{Binding MyPortfolio}" 
                          AutoGenerateColumns="False" IsReadOnly="True"
                          Background="#252526" RowBackground="Transparent">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Asset" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat='${0:N2}'}" Width="120"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="120"/>
                        <DataGridTextColumn Header="Total Value" Binding="{Binding TotalValue, StringFormat='${0:N2}'}" Width="150" FontWeight="Bold"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
        
    </TabControl>
</Window>