<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Desktop_Crypto_Portfolio_Tracker.ViewModels"
        xmlns:views="using:Desktop_Crypto_Portfolio_Tracker.Views"
        x:Class="Desktop_Crypto_Portfolio_Tracker.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Crypto Tracker"
        TransparencyLevelHint="AcrylicBlur"
        Background="#1E1E1E" Foreground="White">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <TabControl Margin="10">
        <TabItem Header="Market Prices" FontSize="16" FontWeight="Bold">
            <views:MarketView/>
        </TabItem>

        <TabItem Header="My Portfolio" FontSize="16" FontWeight="Bold">
            <views:PortfolioView/>
        </TabItem>
    </TabControl>
</Window>