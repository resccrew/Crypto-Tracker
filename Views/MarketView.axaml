<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Desktop_Crypto_Portfolio_Tracker.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Desktop_Crypto_Portfolio_Tracker.Views.MarketView"
             x:DataType="vm:MainWindowViewModel">
    
    <Grid RowDefinitions="Auto, *">
        <TextBlock Text="Top Market Coins" FontSize="20" Margin="10,20,0,10" Foreground="#CCCCCC"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding MarketCoins}" 
                  AutoGenerateColumns="False" IsReadOnly="True" 
                  Background="#252526" RowBackground="Transparent" GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding Rank}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="80" FontWeight="Bold"/>
                <DataGridTextColumn Header="Price (USD)" Binding="{Binding Price, StringFormat='${0:N2}'}" Width="150"/>
                <DataGridTextColumn Header="24h %" Binding="{Binding Change24h, StringFormat='{}{0}%'}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>