<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Desktop_Crypto_Portfolio_Tracker.ViewModels"
             xmlns:asyncImageLoader="using:AsyncImageLoader"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Desktop_Crypto_Portfolio_Tracker.Views.PortfolioView" 
             x:DataType="vm:MainWindowViewModel">
    
    <Grid RowDefinitions="Auto, *">
        <Border Grid.Row="0" Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,10,0,20">
            <Grid ColumnDefinitions="*, Auto">
                <StackPanel>
                    <TextBlock Text="Total Balance" Foreground="#AAAAAA"/>
                    <TextBlock Text="{Binding TotalBalance, StringFormat='${0:N2}'}" FontSize="36" FontWeight="Bold" Foreground="#4CAF50"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
    
                    <Button Content="ðŸ–¨ Print PDF" 
                            Click="OnPrintClick"
                            Background="#444444" Foreground="White"
                            FontSize="14" Padding="15,10"/>

                    <Button Content="+ Add Transaction" 
                            Click="OnAddTransactionClick"
                            Background="#007ACC" Foreground="White" 
                            FontSize="14" Padding="20,10"/>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid Grid.Row="1" ItemsSource="{Binding MyPortfolio}" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Background="#252526" RowBackground="Transparent">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Asset" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center" Margin="5,0">
                                <Image Width="24" Height="24"
                                       VerticalAlignment="Center"
                                       asyncImageLoader:ImageLoader.Source="{Binding ImageUrl}"/>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat='${0:N2}'}" Width="120"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="120"/>
                <DataGridTextColumn Header="Total Value" Binding="{Binding TotalValue, StringFormat='${0:N2}'}" Width="150" FontWeight="Bold"/>

                <DataGridTemplateColumn Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="âœ•" Click="OnDeleteClick"
                                    Background="Transparent" Foreground="#FF5555" 
                                    HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>