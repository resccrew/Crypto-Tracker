<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Desktop_Crypto_Portfolio_Tracker.ViewModels"
             x:Class="Desktop_Crypto_Portfolio_Tracker.Views.VerifyEmailView"
             x:DataType="vm:VerifyEmailViewModel">

  <Grid Background="#1E1E1E">
    <Border Width="420" Padding="28" Background="#252526"
            CornerRadius="12"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

      <StackPanel Spacing="10">
        <TextBlock Text="Verify email" FontSize="26" Foreground="White"/>

        <TextBlock Text="{Binding InfoText}" Foreground="#BDBDBD" TextWrapping="Wrap"/>

        <TextBlock Text="Code" Foreground="#BDBDBD"/>
        <TextBox Text="{Binding Code}" Height="34"/>

        <TextBlock Text="{Binding Error}" Foreground="Tomato" TextWrapping="Wrap"/>

        <Button Content="Verify" Height="36" Command="{Binding VerifyCommand}"/>

        <Button Content="Back"
                Background="Transparent"
                BorderThickness="0"
                Foreground="#4EA1FF"
                HorizontalAlignment="Center"
                Command="{Binding BackCommand}"/>
      </StackPanel>

    </Border>
  </Grid>
</UserControl>
